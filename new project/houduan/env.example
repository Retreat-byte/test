# 数据库配置
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/emotion_island?useUnicode=true&characterEncoding=utf8&useSSL=false&serverTimezone=Asia/Shanghai&allowPublicKeyRetrieval=true
SPRING_DATASOURCE_USERNAME=emotion_user
